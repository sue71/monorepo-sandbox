{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "npm": {
    "prConcurrentLimit": 5,
    "prHourlyLimit": 0,
    "platformAutomerge": true
  },
  "packageRules": [
      {
        "matchManagers": ["npm"],
        "semanticCommitScope": "deps, typescript"
      },
      {
        "matchManagers": ["npm"],
        "matchPackagePrefixes": ["@types/"],
        "automerge": true,
        "major": {
          "automerge": false
        }
      },
      {
        "matchManagers": ["npm"],
        "groupName": "lint tools",
        "extends": ["packages:linters"],
        "matchPackagePatterns": ["^eslint"],
        "matchPackagePrefixes": ["@commitlint/"],
        "matchPackageNames": ["prettier"]
      },
      {
        "matchManagers": ["npm"],
        "groupName": "test tools",
        "extends": ["packages:jsTest"],
        "matchPackageNames": ["@swc/jest"]
      },
      {
        "matchManagers": ["npm"],
        "groupName": "react core",
        "matchPackageNames": ["@types/react", "react", "react-dom"]
      },
      {
        "matchManagers": ["npm"],
        "groupName": "graphql core",
        "extends": ["packages:apollographql"],
        "matchPackageNames": ["graphql"]
      },
      {
        "matchManagers": ["npm"],
        "groupName": "babel",
        "matchPackagePrefixes": ["@babel"]
      },
      {
        "matchManagers": ["npm"],
        "groupName": "sentry",
        "matchPackagePatterns": ["^@sentry"]
      },
      {
        "matchManagers": ["npm"],
        "groupName": "react-hook-form core",
        "matchPackagePrefixes": ["@hookform"],
        "matchPackageNames": ["react-hook-form"]
      },
      {
        "matchManagers": ["npm"],
        "groupName": "chakra-ui core",
        "matchPackagePatterns": ["^@chakra-ui"],
        "matchPackageNames": ["@emotion/react", "@emotion/styled"]
      },
      {
        "matchManagers": ["npm"],
        "groupName": "nestjs",
        "matchPackagePrefixes": ["@nestjs/"]
      },
      {
        "matchManagers": ["npm"],
        "groupName": "nextjs",
        "matchPackageNames": ["next", "next-pwa"]
      },
      {
        "matchManagers": ["npm"],
        "groupName": "typescript",
        "matchPackageNames": ["typescript", "ttypescript", "ts-loader", "ts-node", "tsconfig-paths"]
      }
  ]
}
