{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["packages:react", "packages:apollo"],
  "npm": {
    "prConcurrentLimit": 5,
    "prHourlyLimit": 10
  },
  "packageRules": [
      {
        "matchManagers": ["npm"],
        "semanticCommitScope": "deps, typescript"
      },
      {
        "matchManagers": ["npm"],
        "groupName": "linters",
        "extends": ["packages:linters"],
        "matchPackagePrefixes": ["@commitlint", "eslint", "lint-staged"],
        "matchPackageNames": ["prettier"]
      },
      {
        "matchManagers": ["npm"],
        "matchPackagePrefixes": ["@types"],
        "automerge": true,
        "major": {
          "automerge": false
        }
      },
      {
        "matchManagers": ["npm"],
        "groupName": "test",
        "extends": ["packages:jsTest"],
        "matchPackageNames": ["@swc/jest"]
      },
      {
        "matchManagers": ["npm"],
        "groupName": "babel",
        "matchPackagePrefixes": ["@babel"]
      },
      {
        "matchManagers": ["npm"],
        "groupName": "nestjs",
        "matchPackagePrefixes": ["@nestjs"]
      },
      {
        "matchManagers": ["npm"],
        "groupName": "nextjs",
        "matchPackagePrefixes": ["next"]
      },
      {
        "matchManagers": ["npm"],
        "groupName": "typescript",
        "matchPackageNames": ["typescript", "ttypescript", "ts-loader", "ts-node", "tsconfig-paths"]
      },
      {
        "managers": ["npm"],
        "additionalBranchPrefix": "{{baseDir}}-",
        "matchUpdateTypes": ["minor", "patch"],
        "matchDepTypes": ["devDependencies", "peerDependencies", "dependencies"],
        "commitMessageSuffix": "({{baseDir}})"
      }
  ]
}
